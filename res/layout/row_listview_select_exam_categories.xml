<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_transparent"
    android:orientation="horizontal" >
    
     
     <TextView android:id="@+id/txtRowText"
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/txt_app_labels_fontsize"
        android:background="@drawable/selector_row_item_exam_category"
        android:textColor="@color/app_black"/>

      <TextView android:id="@+id/txtEmpty"
        android:layout_width="0dp"
        android:layout_weight="5.5"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/app_transparent"
        android:textColor="@color/app_transparent"/>

</LinearLayout>
